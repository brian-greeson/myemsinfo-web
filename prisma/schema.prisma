generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id          Int                 @id @default(autoincrement())
  createdAt   DateTime            @default(now())
  updateAt    DateTime            @updatedAt
  email       String              @unique
  password    String
  deleted     Boolean             @default(false)
  emsInfo     EmsInfo[]
  shareLinks  ShareLinksOnUsers[]
  displayName String              @default("")
}

model ShareLink {
  id        Int                 @id @default(autoincrement())
  name      String              @default("My Share Link")
  createdAt DateTime            @default(now())
  updateAt  DateTime            @updatedAt
  deleted   Boolean             @default(false)
  active    Boolean             @default(false)
  users     ShareLinksOnUsers[]
  url       String
}

model ShareLinksOnUsers {
  createdAt   DateTime  @default(now())
  updateAt    DateTime  @updatedAt
  shareLinkId Int
  userId      Int
  isOwner     Boolean   @default(false)
  deleted     Boolean   @default(false)
  shareLink   ShareLink @relation(fields: [shareLinkId], references: [id])
  user        User      @relation(fields: [userId], references: [id])

  @@id([shareLinkId, userId])
}

model EmsInfo {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  updateAt     DateTime  @updatedAt
  userId       Int
  deleted      Boolean   @default(false)
  user         User      @relation(fields: [userId], references: [id])
  phoneNumber  String?
  groupNumber  String?
  policyNumber String?
  name         String?
  description  String?
  relationship String?
  dob          DateTime?
  bloodType    String?
  allergy      String?
  medication   String?
}
